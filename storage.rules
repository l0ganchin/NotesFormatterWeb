rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /projects/{projectId}/{allPaths=**} {
      // NOTE: Storage rules referencing Firestore require the Firebase Blaze plan.
      // If not on Blaze, replace with: allow read, write: if request.auth != null;
      allow read, write: if request.auth != null &&
        firestore.get(/databases/(default)/documents/projects/$(projectId)).data.members.hasAny([request.auth.uid]);
    }
  }
}
